<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Jade Workout App</display-name>
    <description>Jade Workout App</description>

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>myaddress@mycompany.com</param-value>
      <description>
        The EMAIL address of the administrator to whom questions
        and comments about this application should be addressed.
      </description>
    </context-param>


    <servlet>
      <servlet-name>apiDispather</servlet-name>
      <servlet-class>net.jadedungeon.ApiDispather</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>apiDispather</servlet-name>
			<url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>pageDispather</servlet-name>
      <servlet-class>net.jadedungeon.ApiDispather</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>pageDispather</servlet-name>
			<url-pattern>/page/*</url-pattern>
    </servlet-mapping>

		<filter>
			<filter-name>encodingFilter</filter-name>
			<filter-class>jadeutils.web.HttpEncodingFilter</filter-class>
			<init-param>
				<param-name>encoding</param-name>
				<param-value>UTF-8</param-value>
			</init-param>
		</filter>
		<filter-mapping>
			<filter-name>encodingFilter</filter-name>
			<url-pattern>/*</url-pattern>
		</filter-mapping>

    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>

</web-app>
